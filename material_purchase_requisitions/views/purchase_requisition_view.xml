<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="material_purchase_requisition_form_view" model="ir.ui.view">
            <field name="name">material.purchase.requisition.form.view</field>
            <field name="model">material.purchase.requisition</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="requisition_confirm" type="object" string="Confirm" invisible="state not in ['draft']"
                                class="btn-primary" groups="material_purchase_requisitions.group_create_requisition"/>
                        <button name="manager_approve" type="object" string="Department Approve"
                                invisible="state not in ['dept_confirm','cancel']" class="btn-primary"
                                groups="material_purchase_requisitions.group_purchase_requisition_department"/>
                        <button name="user_approve" type="object" string="Budget Available" invisible="state not in ['ir_approve']"
                                class="btn-primary"
                                groups="material_purchase_requisitions.group_purchase_requisition_user"/>
                        <button name="user_not_approve" type="object" string="Not Available" invisible="state not in ['ir_approve']"
                                class="btn-primary"
                                groups="material_purchase_requisitions.group_purchase_requisition_user"/>
                        <button name="request_stock" type="object" string="Create RFQ"
                                invisible="'|', (requi_act_po == False), (state != 'approve')"
                                class="btn-primary"
                                groups="material_purchase_requisitions.group_purchase_requisition_manager"/>
                        <button name="request_stock1" type="object" string="Create Picking"
                                invisible="'|', (requi_act_ip == False), (state != 'approve')"
                                class="btn-primary" groups="material_purchase_requisitions.group_store_keeper"/>
                        <button name="request_stock" type="object" string="Create Picking/RFQ"
                                invisible="'|', (requi_act_ip_po == False), (state != 'approve')"
                                class="btn-primary"
                                groups="material_purchase_requisitions.group_store_keeper , material_purchase_requisitions.group_purchase_requisition_manager"/>

                        <button name="action_received" type="object" string="Received" class="btn-primary"
                                groups="material_purchase_requisitions.group_create_requisition"
                                invisible="(po_confirmed == False),(pick_confirmed == False),(state in ['draft','dept_confirm','stock','receive','ir_approve','approve','cancel','reject','picking','po_pick'])"/>
                        <button name="requisition_reject" type="object" string="Reject"
                                groups="material_purchase_requisitions.group_purchase_requisition_department"
                                invisible="state not in ['dept_confirm']"/>
                        <button name="action_cancel" type="object" invisible="state not in ['draft']" string="Cancel"
                                groups="material_purchase_requisitions.group_create_requisition"/>
                        <button name="reset_draft" type="object" string="Reset to Draft" invisible="state not in ['cancel', 'reject']"
                                class="btn-primary"
                                groups="material_purchase_requisitions.group_purchase_requisition_department"/>
                        <field name="state" widget="statusbar" string="confirm"
                               statusbar_visible="draft,approve,receive"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" icon="fa-truck"
                                    name="show_picking" groups="base.group_user"
                                    invisible="picking_count == 0">
                                <field name="picking_count" string="Internal Picking" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" icon="fa-square-o" name="action_show_po"
                                    invisible="po_count == 0">
                                <field name="po_count" string="Purchase Order" widget="statinfo"/>
                            </button>

                        </div>
                        <div class="oe_title">
                            <div class="oe_title">
                                <h1>
                                    <field name="name"/>
                                    <br/>
                                </h1>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="dept_manager" invisible="1"/>
                                <field name="aprove_state_edit_check" invisible="1"/>
                                <field name="po_confirmed" invisible="1"/>
                                <field name="pick_confirmed" invisible="1"/>
                                <field name="requi_act_po" invisible="1"/>
                                <field name="requi_act_ip" invisible="1"/>
                                <field name="requi_act_ip_po" invisible="1"/>
                                <field name="edit_pick_detail" invisible="1"/>

                                <field name="employee_id" readonly="state != 'draft'"/>
                                <field name="department_id" readonly="state != 'draft'"/>
                                <field name="company_id" groups="base.group_multi_company"
                                       readonly="state != 'draft'"/>
                                <field name="requisiton_responsible_id"
                                       readonly="state != 'draft'"/>
                            </group>
                            <group>

                                <field name="request_date" readonly="state != 'draft'"/>
                                <field name="receive_date"
                                       readonly="state in ['reject','cancel','receive']"/>
                                <field name="date_end"
                                       readonly="state in ['reject','cancel','receive']"/>
                                <field name="analytic_account_id" groups="analytic.group_analytic_accounting"
                                       readonly="state in ['reject','cancel','receive']"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Requisitions Lines">
                                <field name="requisition_line_ids">
                                    <tree editable="bottom">
                                        <field name="requisition_type"
                                               readonly="requisition_state not in ['dept_confirm']"/>
                                        <!--                                                                                       groups="material_purchase_requisitions.group_purchase_requisition_user,purchase.group_purchase_user,material_purchase_requisitions.group_purchase_requisition_manager,material_purchase_requisitions.group_purchase_requisition_department"/>-->
                                        <field name="product_id"
                                               readonly="requisition_state != 'draft'"/>
                                        <field name="description"
                                               readonly="requisition_state != 'draft'"/>
                                        <field name="qty" readonly="requisition_state != 'draft'"/>
                                        <field name="requisition_state" column_invisible="True"/>
                                        <field name="uom" class="oe_no_button"
                                               readonly="requisition_state != 'draft'"/>
                                        <field name="partner_id"
                                               readonly="requisition_type != 'purchase'"
                                               widget="many2many_tags"
                                               groups="material_purchase_requisitions.group_store_keeper,material_purchase_requisitions.group_purchase_requisition_manager,material_purchase_requisitions.group_purchase_requisition_user,material_purchase_requisitions.group_purchase_requisition_department"/>


                                    </tree>
                                </field>
                                <group>
                                    <field name="reason" readonly="state not in ['draft']"
                                           placeholder="Add Reason for Internal Requisition ...."/>
                                </group>
                            </page>
                            <page
                                    string="Picking Details" readonly="state in ['done']"
                                    groups="material_purchase_requisitions.group_purchase_requisition_user,stock.group_stock_user">

                                <group>
                                    <group>
                                        <field name="location_id"
                                               domain="[('usage','!=', 'view')]"
                                               readonly="'|',(state in ['reject','cancel','receive','ir_approve','dept_confirm']),(edit_pick_detail == False)"
                                               groups="material_purchase_requisitions.group_purchase_requisition_user,stock.group_stock_user"/>
                                    </group>
                                    <group>
                                        <field name="dest_location_id"
                                               readonly="'|',(state in ['reject','cancel','receive','ir_approve','dept_confirm']),(edit_pick_detail == False)"
                                               groups="material_purchase_requisitions.group_purchase_requisition_user,stock.group_stock_user"/>
                                        <field name="delivery_picking_id"
                                               groups="material_purchase_requisitions.group_purchase_requisition_user,stock.group_stock_user"/>
                                        <field name="custom_picking_type_id"
                                               readonly="'|',(state in ['reject','cancel','receive','ir_approve','dept_confirm']),(edit_pick_detail == False)"
                                               groups="material_purchase_requisitions.group_purchase_requisition_user,stock.group_stock_user"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Other Information">
                                <group>
                                    <group>
                                        <field name="employee_confirm_id"/>
                                        <field name="approve_manager_id"/>
                                        <field name="approve_employee_id"/>
                                        <field name="reject_employee_id"/>
                                    </group>
                                    <group>
                                        <field name="confirm_date"/>
                                        <field name="managerapp_date"/>
                                        <field name="userrapp_date"/>
                                        <field name="userreject_date"/>
                                    </group>
                                </group>
                            </page>
<!--                            <page string="Assign Limit">-->
<!--                                <group>-->
<!--                                    <group>-->
<!--                                        <field name="petty_cash_owner_id"/>-->
<!--                                        <field name="limit_type" class="o_light_label" widget="radio" options="{'horizontal': true}"/>-->
<!--                                        <field name="limit_number"/>-->
<!--                                    </group>-->
<!--                                    <group>-->
<!--                                        <field name="period_start_date"/>-->
<!--                                        <field name="period_end_date"/>-->
<!--                                    </group>-->
<!--                                </group>-->
<!--                            </page>-->
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="material_purchase_requisition_tree_view" model="ir.ui.view">
            <field name="name">material.purchase.requisition.view.tree</field>
            <field name="model">material.purchase.requisition</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="request_date"/>
                    <field name="date_end"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="material_purchase_requisition_search_view" model="ir.ui.view">
            <field name="name">material.purchase.requisition search</field>
            <field name="model">material.purchase.requisition</field>
            <field name="arch" type="xml">
                <search string="Purchase Requistion search">
                    <field name="employee_id"/>
                    <field name="request_date"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="date_end"/>
                    <field name="department_id"/>
                    <field name="approve_manager_id"/>
                    <field name="approve_employee_id"/>
                    <field name="location_id"/>
                    <field name="managerapp_date"/>
                    <field name="userrapp_date"/>
                    <field name="receive_date"/>
                    <field name="date_done"/>
                    <field name="dest_location_id"/>
                    <field name="delivery_picking_id"/>
                    <field name="reason"/>
                    <field name="state"/>
                    <group expand="0" string="Group By">
                        <filter string="Employee" name="employee_id" context="{'group_by':'employee_id'}"/>
                        <filter string="Reqisition Date" name="request_date" context="{'group_by':'request_date'}"/>
                        <filter string="Company" name="company" context="{'group_by':'company_id'}"
                                groups="base.group_multi_company"/>
                        <filter string="Reqisition Dedline" name="date_end" context="{'group_by':'date_end'}"/>
                        <filter string="Department" name="department" context="{'group_by':'department_id'}"/>
                        <filter string="Department Manager" name="department_manager"
                                context="{'group_by':'approve_manager_id'}"/>
                        <filter string="Approve By" name="approve_by" context="{'group_by':'approve_employee_id'}"/>
                        <filter string="Location" name="location" context="{'group_by':'location_id'}"/>
                        <filter string="Manager Approve Date" name="managerapp_date"
                                context="{'group_by':'managerapp_date'}"/>
                        <filter string="User Approve Date" name="userapp_date" context="{'group_by':'userrapp_date'}"/>
                        <filter string="Destination Location" name="dest_location_id"
                                context="{'group_by':'dest_location_id'}"/>
                        <filter string="Delivery Picking" name="delivery_picking_id"
                                context="{'group_by':'delivery_picking_id'}"/>
                        <filter string="Reason" name="reason" context="{'group_by':'reason'}"/>
                        <filter string="Date Done" name="date_done" context="{'group_by':'date_done'}"/>
                        <filter string="State" name="state" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_material_purchase_requisition">
            <field name="name">Requisitions</field>
            <field name="res_model">material.purchase.requisition</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_petty_cash_expense">
            <field name="name">Imprest Fund Expenses</field>
            <field name="res_model">petty.cash.expense</field>
<!--            <field name="view_id" ref="material_purchase_requisitions.petty_cash_expense_tree_view"/>-->
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_petty_cash_limit">
            <field name="name">Imprest Fund Limit</field>
            <field name="res_model">petty.cash</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_petty_cash_balances">
            <field name="name">Imprest Fund Balances</field>
            <field name="res_model">petty.cash.balances</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_general_limit_approval">
            <field name="name">General Limit Approval Configuration</field>
            <field name="res_model">general.limit.approvals</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_special_limit_approval">
            <field name="name">Special Limit Approval Configuration</field>
            <field name="res_model">special.limit.approvals</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_general_expense_approval">
            <field name="name">General Limit Approval Configuration</field>
            <field name="res_model">general.expense.approvals</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_special_expense_approval">
            <field name="name">Special Limit Approval Configuration</field>
            <field name="res_model">special.expense.approvals</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_purchase_requisition" name="Requisitions" groups="base.group_user"
                  web_icon="material_purchase_requisitions,static/description/material.png"/>
        <menuitem id="menu_item_purchase_requisition" name="Purchase Requisition" parent="menu_purchase_requisition"/>
        <menuitem id="menu_item_petty_cash" name="Imprest Fund" parent="menu_purchase_requisition"/>
        <menuitem id="menu_item_petty_cash_approvals" name="Approvals" parent="menu_purchase_requisition"/>
        <menuitem id="menu_action_purchase_requisition" name="Purchase Requisitions"
                  parent="menu_item_purchase_requisition" action="action_material_purchase_requisition"/>

        <menuitem id="menu_action_petty_cash_expense" name="Imprest Fund Expense"
                  parent="menu_item_petty_cash" action="action_petty_cash_expense" sequence="2"/>
        <menuitem id="menu_action_petty_cash_limit" name="Assign Limit"
                  parent="menu_item_petty_cash" action="action_petty_cash_limit" sequence="1"/>
        <menuitem id="menu_action_petty_cash_balances" name="Balances"
                  parent="menu_item_petty_cash" action="action_petty_cash_balances" sequence="3"/>

        <menuitem id="menu_action_general_limit_approval" name="General Limit Approval Configuration"
                  parent="menu_item_petty_cash_approvals" action="action_general_limit_approval" sequence="1"/>
        <menuitem id="menu_action_special_limit_approval" name="Special Limit Approval Configuration"
                  parent="menu_item_petty_cash_approvals" action="action_special_limit_approval" sequence="2"/>

        <menuitem id="menu_action_general_expense_approval" name="General Expense Approval Configuration"
                  parent="menu_item_petty_cash_approvals" action="action_general_expense_approval" sequence="3"/>
        <menuitem id="menu_action_special_expense_approval" name="Special Expense Approval Configuration"
                  parent="menu_item_petty_cash_approvals" action="action_special_expense_approval" sequence="4"/>



