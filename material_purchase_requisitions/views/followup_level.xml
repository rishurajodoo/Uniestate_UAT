<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_account_followup_followup_line_tree_2" model="ir.ui.view">
        <field name="name">account_followup.followup.line.tree.ext</field>
        <field name="model">account_followup.followup.line</field>
        <field name="arch" type="xml">
            <tree string="Follow-up Steps" >
                <field name="name"/>
                <field name="delay"/>
                <field name="send_email"/>
                <field name="send_sms"/>
                <field name="auto_execute"/>
                <field name="activity_type_id" string="Activity"/>
                <field name="company_id"  groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="action_account_followup_line_view_petty" model="ir.actions.act_window">
        <field name="name">Follow-up Levels</field>
        <field name="res_model">account_followup.followup.line</field>
        <field name="search_view_id" ref="account_followup.view_account_followup_line_filter"/>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_pretty','=',True)]</field>
        <field name="context">{
              'default_is_pretty':True}
          </field>
         <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_account_followup_followup_line_tree_2')}),
                ]"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Define follow-up levels and their related actions
          </p><p>
            For each step, specify the actions to be taken and delay in days. It is
            possible to use print and e-mail templates to send specific messages to
            the customer.
          </p>
      </field>
    </record>

    <menuitem id="menu_action_followup_level" name="Follow-up Levels"
                  parent="menu_item_petty_cash_approvals" action="action_account_followup_line_view_petty" sequence="5"/>

</odoo>
