<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- tree view of portal employee # T4964 -->
    <record id="view_portal_employee_tree" model="ir.ui.view">
        <field name="name">portal.employee.tree</field>
        <field name="model">portal.employee</field>
        <field name="arch" type="xml">
            <tree string="Portal Employee">
                <field name="name" />
                <field name="email" />
                <field name="phone" />
                <field name="main_user_id" />
            </tree>
        </field>
    </record>
    <!-- form view of portal employee # T4964 -->
    <record id="view_portal_employee_form" model="ir.ui.view">
        <field name="name">portal.employee.form</field>
        <field name="model">portal.employee</field>
        <field name="arch" type="xml">
            <form string="Portal Employee">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="email" />
                            <field name="phone" />
                            <field
                                name="work_address_id"
                                context="{
                            'show_address': 1,
                            'form_view_ref': 'base.res_partner_view_form_private'}"
                                options='{"always_reload": True, "highlight_first_line": True}'
                            />
                            <field name="main_user_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- kanban view of portal employee # T4964 -->
    <record id="view_portal_employee_kanban" model="ir.ui.view">
        <field name="name">portal.employee.kanban</field>
        <field name="model">portal.employee</field>
        <field name="arch" type="xml">
            <kanban string="Portal Employee">
                <field name="name" />
                <field name="email" />
                <field name="phone" />
                <templates>
                    <t t-name="kanban-box">
                        <div
                            class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record"
                        >
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field
                                                name="name"
                                                placeholder="Employee's Name"
                                            />
                                        </strong>
                                    </div>
                                </div>
                                <ul>
                                    <li
                                        t-if="record.email.raw_value"
                                        class="o_text_overflow"
                                    >
                                        <field name="email" />
                                    </li>
                                    <li
                                        t-if="record.phone.raw_value"
                                        class="o_force_ltr"
                                    >
                                        <field name="phone" />
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!-- search view of portal employee # T4964 -->
    <record id="view_portal_employee_search" model="ir.ui.view">
        <field name="name">portal.employee.search</field>
        <field name="model">portal.employee</field>
        <field name="arch" type="xml">
            <search string="Portal Employee">
                <field name="name" />
                <field name="email" />
                <field name="phone" />
            </search>
        </field>
    </record>
    <!-- action for portal employee # T4964 -->
    <record id="portal_employee_action" model="ir.actions.act_window">
        <field name="name">Portal Employee</field>
        <field name="res_model">portal.employee</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

</odoo>
