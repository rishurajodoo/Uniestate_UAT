<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Portal Access Rules -->
    <record id="attendance_rule_portal" model="ir.rule">
        <field name="name">Portal Attendance</field>
        <field name="model_id" ref="employee_activity_portal.model_portal_attendance" />
        <field name="domain_force">[('employee_id.main_user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]" />
        <field name="perm_unlink" eval="False" />
        <field name="perm_write" eval="True" />
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="False" />
    </record>
    <record id="employee_rule_portal" model="ir.rule">
        <field name="name">Portal Employee</field>
        <field name="model_id" ref="employee_activity_portal.model_portal_employee" />
        <field name="domain_force">[('main_user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]" />
        <field name="perm_unlink" eval="False" />
        <field name="perm_write" eval="True" />
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True" />
    </record>

    <record id="hr_leave_rule_portal_user" model="ir.rule">
        <field name="name">Time Off Request: Portal User</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave"/>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
    </record>


</odoo>
