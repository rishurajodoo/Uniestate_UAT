<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_inherited_token" model="ir.ui.view">
        <field name="name">account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="due_date" invisible="1"/>
<!--                <field name="pay_rec" invisible="1"/>-->
<!--                <field name="journal_ids" widget="many2many_tags" invisible="1"/>-->
            </xpath>
<!--            <xpath expr="//field[@name='journal_id']" position="attributes">-->
<!--                <attribute name="domain">[('id','in', journal_ids)]</attribute>-->
<!--            </xpath>-->
        </field>
    </record>


     <record id="view_account_payment_tree_inherited" model="ir.ui.view">
        <field name="name">account.payment.tree</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="due_date" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
