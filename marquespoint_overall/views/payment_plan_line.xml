<odoo>

    <record id="view_plan_line_wizard_form" model="ir.ui.view">
        <field name="name">Plan Line Wizard</field>
        <field name="model">payment.plan.line</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <field name="percentage"/>
                    <field name="amount"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="installment_period"/>
                    <field name="installment_no"/>
                </group>
            </form>
        </field>
    </record>

</odoo>