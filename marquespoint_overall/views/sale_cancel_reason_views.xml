<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_sale_cancel_reason_form" model="ir.ui.view">
        <field name="name">Sale Cancel Reason</field>
        <field name="model">sale.cancel.reason</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="cancellation_charges"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_sale_cancel_reason">
        <field name="name">Sale Cancellation Reason</field>
        <field name="res_model">sale.cancel.reason</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
            id="menu_sale_cancel"
            name="Sale Cancellation Reason"
            parent="sale.sale_menu_root"
            action="action_sale_cancel_reason"
    />
</odoo>