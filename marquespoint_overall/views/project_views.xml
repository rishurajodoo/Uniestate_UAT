<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="project_project_form" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//group[last()]" position="after">
                <!--                <field name="cancellation_percentage"/>-->
                <group name="sale_custom" string="Sales Booking">
                    <field name="sales_booking_product"/>
                    <field name="sale_booking_type"/>
                    <field name="sale_booking_percentage"
                           invisible="sale_booking_type in ['sale_booking_fixed_amount', False]"/>
                    <field name="sale_booking_amount"
                           invisible="sale_booking_type in ['sale_booking_percentage', False]"/>
                </group>

                <group name="lease_custom" string="Lease booking">
                    <field name="lease_booking_product"/>
                </group>
                <group name="renewal" string="Renewal charges">
                    <field name="renewal_changes_item"/>
                    <field name="renewal_charges"/>
                    <field name="renewal_percentage" invisible="renewal_charges in ['renewal_fixed_amount', False]"/>
                    <field name="renewal_fixed_amount" invisible="renewal_charges in ['renewal_percentage', False]"/>
                </group>
                <group name="termination" string="Early termination charges">
                    <field name="early_termination_product"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>