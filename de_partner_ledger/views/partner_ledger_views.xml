    <record id="action_partner_ledger_server" model="ir.actions.server">
        <field name="name">Partner Ledger Report</field>
        <field name="sequence">1</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="binding_model_id" ref="model_res_partner"/>
        <field name="state">code</field>
        <field name="code">
            if records: action = records.action_partner_ledger_wizard()
        </field>
    </record>

    <record id="partner_ledger_wizard_report" model="ir.ui.view">
        <field name="name">partner.ledger.wizard.report</field>
        <field name="model">partner.ledger</field>
        <field name="arch" type="xml">
            <form string="Partner Ledger">
                <group>
                    <group>
                        <field name="start_date"/>
                        <field name="partner_id" readonly="1" widget="many2many_tags"/>
                        <field name="sale_order_ids" readonly="1" widget="many2many_tags" invisible="1"/>
                        <field name="sale_order_id" widget="many2many_tags"   domain="[('id', '=', sale_order_ids)]"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                    </group>
                </group>
                <footer>
                    <button name="print_report" type="object" string="Print" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_partner_ledger_wizard" model="ir.actions.act_window">
        <field name="name">Partner Ledger</field>
        <field name="res_model">partner.ledger</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <record id="view_is_pdc_account_account_inherited" model="ir.ui.view">
        <field name="name">account.account.inherited</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="model">account.account</field>
        <field name="priority">100</field>
        <field type="xml" name="arch">
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="is_pdc"/>
            </xpath>
        </field>
    </record>

