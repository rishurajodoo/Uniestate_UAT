<odoo>

    <record id="view_pdc_recall_wizard_form" model="ir.ui.view">
        <field name="name">PDC Recall wizards</field>
        <field name="model">pdc.recall.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="product_id" required="1"/>
                        <field name="penalty_amount"/>
                        <field name="invoice_policy" widget="radio"/>
                        <field name="pdc_cheque_id" invisible="1"/>
                    </group>
                    <group>
                        <field name="cheque_date"/>
                        <field name="pay_by" widget="radio"/>

                        <label for="time_interval"/>
                        <div class="o_row">
                            <span class="w-10">
                                <field name="time_interval"/>
                            </span>
                            <h6>Days</h6>
                        </div>
                    </group>
                </group>
                <footer>
                    <button name="create_pdc_recall" string="Create PDC and Invoice"  invisible="pay_by != 'cheque'" type="object" class="btn-primary"/>
                    <button name="register_full_amount_by_cash" string="Create Invoice" type="object"
                            class="btn-primary" invisible="pay_by != 'cash' "/>
                    <button string="Cancel" type="object" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
