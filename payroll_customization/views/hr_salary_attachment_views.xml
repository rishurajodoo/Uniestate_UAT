<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_salary_attachment_view_form_payroll_customization" model="ir.ui.view">
        <field name="name">hr.salary.attachment.form.payroll.customization</field>
        <field name="model">hr.salary.attachment</field>
        <field name="inherit_id" ref="hr_payroll.hr_salary_attachment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button name="create_new_journal_entry"
                        type="object"
                        string="New Journal Entry"
                        class="oe_highlight"/>
            </xpath>
            <div class="oe_button_box" name="button_box">
                <button name="action_view_journal_entries"
                        type="object"
                        string="Journal Entries"
                        class="oe_stat_button"
                        icon="fa-bars"
                >
                     <field name="journal_entry_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
