<odoo>
    <data>
        <record id="view_account_asset_form_property" model="ir.ui.view">
            <field name="name">account.asset.form.property</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group[1]" position="before">
                    <group name="property_details" string="Property">
                        <field name="unit_id"/>
                        <field name="floor_id"/>
                        <field name="building_id"/>
                        <field name="project_id"/>
                        <field name="order_id" readonly="1"/>
                        <field name="for_building" invisible="1"/>
                        <field name="for_unit" invisible="1"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>