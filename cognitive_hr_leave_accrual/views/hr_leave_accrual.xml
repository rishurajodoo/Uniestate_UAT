<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hr_leave_type_inheri_allocate_automatically" model="ir.ui.view">
        <field name="name">hr.leave.type.inherit</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='visual']" position="before">
                <group>
                    <group name="leave_allocate" string="Automatic Leave Allocation">
                        <field name="allocate_leaves"/>
                        <field name="accrual_plan_id"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>