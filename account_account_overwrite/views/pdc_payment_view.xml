<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pdc_payment_form_inherited" model="ir.ui.view">
        <field name="name">pdc.payment.form</field>
        <field name="model">pdc.payment</field>
        <field name="inherit_id" ref="pdc_payments.view_pdc_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pdc_type']" position="after">
                <field name="is_overwrite" readonly="state != 'draft'"/>
                <field name="overwite_account_id" invisible="not is_overwrite" readonly="state != 'draft'"/>
            </xpath>
        </field>
    </record>
</odoo>