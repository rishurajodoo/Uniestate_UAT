<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sale_order_inherit" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!--                <field name='payment_term_id' position="attributes">-->
                <!--                    <attribute name="invisible">not for_sale</attribute>-->
                <!--                </field>-->
                <xpath expr="//page[@name='other_information']" position="after">
                    <page name="spa" string="SPA">
                        <field name='purchaser_ids' string="Purchaser Detail" force_save="1"
                               colspan="4" widget="one2many_list">
                            <tree editable='bottom'>
                                <field name='purchase_individual' string='Individual Purchaser'/>
                                <field name='purchase_company' string='Company Purchaser'/>
                            </tree>
                        </field>
                        <group>
                            <group name="project" string="Project">
                                <field name="project"/>
                                <field name="location"/>
                                <field name="location_arabic"/>
                                <field name="relevent_unit_no"/>
                                <field name="relevent_unit_area"/>
                                <field name="relevent_bays_no"/>
                            </group>
                            <group name="bank_details" string="Bank Details">
                                <field name="bank_details"/>
                            </group>
                        </group>
                        <group>
                            <group name="other_info" string="Other Information">
                                <field name="anticipated_completion_date"/>
                                <field name="permitted_use"/>
                                <field name="late_payment_fee"/>
                            </group>
                        </group>
                        <group>
                            <group name="other_info" string="Other Information(Arabic)">
                                <field name="permitted_use_arabic"/>
                                <field name="late_payment_arabic"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="sale_order_inheritance" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='spa']" position="after">
                    <page name="installment" string="Installment Details" invisible="1">
                        <group>
                            <group>
                                <field name="amount_total" string="Invoice Amount" class="oe_inline" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="payment" string="Payment Terms"/>
                                <field name="payment_duration"/>
                                <field name="start_date" placeholder="First Installment"/>
                                <field name="end_date" placeholder="Last Installment" invisible="1"/>
                                <button name="create_invoice_installment" string="create invoice" type="object"
                                        invisible="state not in ['sale']"
                                />

                            </group>
                            <group>
                                <field name="down_payment"/>
                                <field name="amount" invisible="down_payment == 'percentage'"/>
                                <field name="percentage" widget="percentage"
                                       invisible="down_payment == 'amount'"/>
                                <field name="down_payment_amount"/>
                                <field name="installment_payable_amount"/>
                                <field name="installment_amount"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="account_move_inheritance" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="so_ids" string="Sale Order ID"
                           invisible="move_type != 'out_invoice'" readonly="state == 'posted'"
                    />
                </xpath>
            </field>
        </record>

        <record id="res_partner_custom_fields_inherit" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="attributes">
                    <attribute name="string">TRN</attribute>
                </xpath>
                <xpath expr="//field[@name='website']" position="before">
                    <field name="fax_eng" string="Fax"/>
                    <field name="fax_arabic" invisible="1"/>
                    <field name="passport_eng" string="Passport"/>
                    <field name="passport_arabic" invisible="1"/>
                    <field name="emirates_id"/>
                    <field name="trade_licence_no" invisible="company_type != 'company'"/>
                    <!--                     <field name="licensing_aut" invisible="company_type != 'company'"/> -->
                    <field name="mol_id" invisible="company_type != 'company'"/>
                </xpath>

                <xpath expr="//field[@name='vat']" position="before">
                    <label for="street" string="Address(Arabic)"/>
                    <div>
                        <div class="o_address_format" name="div_address">
                            <field name="street_arabic" placeholder="Street(Arabic)" class="o_address_street"/>
                            <field name="street2_arabic" placeholder="Street 2(Arabic)" class="o_address_street"/>
                            <field name="city_arabic" placeholder="City(Arabic)" class="o_address_city"/>
                            <field name="state_id_arabic" class="o_address_state" placeholder="State(Arabic)"/>
                            <field name="zip_arabic" placeholder="ZIP(Arabic)" class="o_address_zip"/>
                            <field name="country_arabic" placeholder="Country(Arabic)" class="o_address_country"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
        <record id="res_company_inherit" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/div[1]" position="after">
                    <div class="oe_title">
                        <h1>
                            <field name="name_arabic" placeholder="الاسم عربي" nolanel="1"/>
                        </h1>
                    </div>
                </xpath>
                <xpath expr="//field[@name='vat']" position="attributes">
                    <attribute name="string">TRN</attribute>
                </xpath>
                <xpath expr="//field[@name='website']" position="before">
                    <field name="fax_eng"/>
                    <field name="fax_arabic"/>
                    <field name="emirates_id"/>
                    <field name="mol_id"/>
                </xpath>
                <xpath expr="//field[@name='vat']" position="before">
                    <label for="street" string="Address(Arabic)"/>
                    <div>
                        <div class="o_address_format" name="div_address">
                            <field name="street_arabic" placeholder="Street(Arabic)" class="o_address_street"/>
                            <field name="street2_arabic" placeholder="Street 2(Arabic)" class="o_address_street"/>
                            <field name="city_arabic" placeholder="City(Arabic)" class="o_address_city"/>
                            <field name="state_id_arabic" class="o_address_state" placeholder="State(Arabic)"/>
                            <field name="zip_arabic" placeholder="ZIP(Arabic)" class="o_address_zip"/>
                            <field name="country_arabic" placeholder="Country(Arabic)" class="o_address_country"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
        <record id="ali_res_bank_inherit" model="ir.ui.view">
            <field name="name">res.bank.form</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bic']" position="before">
                    <field name="swift"/>
                    <field name="account_no"/>
                    <field name="account_name"/>
                    <field name="IBAN"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
