<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sales_fields" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Invoice feilds display on left -->
            <xpath expr="//field[@name='sale_order_template_id']" position="after">
                <field name="project" force_save="1" readonly="1"/>
                <field name="building" force_save="1" readonly="1"/>
                <field name="floor" force_save="1"  readonly="1"/>
                <field name="unit" force_save="1"  readonly="1" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record id="invoice_fields" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Invoice feilds display on left -->
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="project" invisible="move_type != 'out_invoice'" readonly="state == 'posted'" force_save="1"/>
                <field name="building" invisible="move_type != 'out_invoice'" readonly="state == 'posted'" force_save="1"/>
                <field name="floor" invisible="move_type != 'out_invoice'" readonly="state == 'posted'" force_save="1"/>
                <field name="unit" widget="many2many_tags" invisible="move_type != 'out_invoice'" readonly="state == 'posted'" force_save="1"/>
                <field name="is_afm" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="stock_fields" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="project"  readonly="state == 'done'"/>
                <field name="building" readonly="state == 'done'"/>
                <field name="floor" readonly="state == 'done'"/>
                <field name="unit" readonly="state == 'done'"/>
            </xpath>
        </field>
    </record>
</odoo>
