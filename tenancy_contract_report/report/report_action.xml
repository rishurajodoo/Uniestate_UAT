<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_tenant_contract" model="report.paperformat">
        <field name="name">Tenancy Contract</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">32</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_tenancy_report" model="ir.actions.report">
        <field name="name">Tenancy Contract</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tenancy_contract_report.tenancy_contract_template</field>
        <field name="report_file">tenancy_contract_report.tenancy_contract_template</field>
<!--        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>-->
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="tenancy_contract_report.paperformat_tenant_contract"/>
    </record>
</odoo>
