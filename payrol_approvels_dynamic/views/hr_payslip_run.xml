<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payslip_run_view_approval_form" model="ir.ui.view">
        <field name="name">hr.payslip.run.inherit.approval.form</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_draft']" position="after">
                <button name="action_submit_approval" type="object" string="Submit For Approval" invisible="state != 'verify'" class="oe_highlight"/>
            </xpath>
        </field>
    </record>

     <record id="hr_payslip_run_view_approval_draft_form" model="ir.ui.view">
        <field name="name">hr.payslip.run.inherit.approval.draft.form</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_validate']" position="replace">
            </xpath>
        </field>
    </record>

</odoo>
