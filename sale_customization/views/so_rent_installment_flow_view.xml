<odoo>
    <data>
        <record id="view_order_form_rent_flow" model="ir.ui.view">
            <field name="name">Sale Order Rent Installment Plan</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="marquespoint_overall.view_order_form_inherited"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']//tree//field[@name='product_id']" position="attributes">
                    <attribute name="domain">['|',('sale_ok', '=', True),('is_unit', '=', True), '|', ('company_id',
                        '=', False), ('company_id', '=', parent.company_id)]
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="after">
                    <field name="is_ejari" column_invisible="parent.for_rent != True"/>
                </xpath>
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button name="create_deferred"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-bars"
                            string="Deferred Revenues"
                            invisible="is_deferred != True"
                    >
                    </button>
                    <button name="create_tenancy_contract"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-files-o"
                            string="Tenancy Contract"
                            invisible="for_rent != True or state != 'sale'"
                    >
                    </button>
                    <button name="show_pdcs"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-bars"
                            string="PDC"
                    >
                    </button>
                    <field name="is_deferred" invisible="1"/>
                </xpath>
                <xpath expr="//page[@name='other_information']" position="after">
                    <page string="Tenancy Payment Plan" name="rent_payment_plan"
                          invisible="for_rent != True">
                        <field name="rent_plan_ids" readonly="state == 'sale'">
                            <tree sample="1" editable="bottom">
                                <field name="is_selected" nolabel="1"/>
                                <field name="milestone_ids" invisible="1"/>
                                <field name="milestone_id" domain="[('id','not in', milestone_ids)]"/>
                                <button string="Add" class="btn btn-primary" name="open_rent_payment_plan_wizard"
                                        type="object" column_invisible="parent.state == 'sale'"/>
                                <field name="percentage" readonly="1"/>
                                <field name="percentage_check" column_invisible="1"/>
                                <field name="amount" readonly="1" force_save="1"/>
                                <field name="start_date" readonly="1"/>
                                <field name="end_date" readonly="1"/>
                                <field name="tax_amount" invisible="1"/>
                                <field name="type"/>
                                <field name="move_id"/>
                                <field name="is_tax_include" invisible="1"/>
                                <field name="token_amount" invisible="1"/>
                                <field name="is_token_created" invisible="1"/>
                                <field name="state" invisible="1"/>
                                <button string="Create Invoice" class="btn btn-primary" name="create_inv"
                                        type="object" invisible="state not in ('sale')"/>
                            </tree>
                        </field>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_pdc_payment" invisible="1" string="Create PDC Payment" type="object"/>
                            <button name="action_create_payment_plan" string="Create Payment Plan" type="object"/>
                        </div>
                        <notebook name="installment">
                            <page string="PDC">
                                <field name="pdc_ids">
                                </field>
                            </page>
                        </notebook>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="view_sale_order_kanban_inherited" model="ir.ui.view">
            <field name="name">sale.order.kanban.inherited</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sale_order_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban" position="replace">
                    <kanban class="o_kanban_mobile" default_group_by="tenancy_state" sample="1">
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="amount_total"/>
                        <field name="date_order"/>
                        <field name="state"/>
                        <field name="currency_id"/>
                        <field name="activity_state"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="tenancy_state"/>
                        <progressbar field="activity_state"
                                     colors="{&quot;planned&quot;: &quot;success&quot;, &quot;today&quot;: &quot;warning&quot;, &quot;overdue&quot;: &quot;danger&quot;}"/>
                        <templates>
                            <t t-name="kanban-box">
                                <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                    <div class="o_kanban_record_top mb16">
                                        <div class="o_kanban_record_headings mt4">
                                            <strong class="o_kanban_record_title">
                                                <span>
                                                    <t t-esc="record.partner_id.value"/>
                                                    [<t t-esc="record.name.value"/>]
                                                </span>
                                            </strong>
                                        </div>
                                        <strong>
                                            <field name="amount_total" widget="monetary"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left text-muted">
                                            <span>
                                                <field name="start_date"/>
                                                -
                                                <field name="end_date"/>
                                            </span>
                                            <field name="activity_ids" widget="kanban_activity"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="tenancy_state" widget="label_selection"
                                                   options="{'classes': {'new': 'default', 'new': 'success', 'closed': 'danger'}}"/>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </templates>
                    </kanban>
                </xpath>
            </field>
        </record>
    </data>
</odoo>