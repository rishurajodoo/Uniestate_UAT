<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_payment_plan_wizard_form" model="ir.ui.view">
        <field name="name">Payment Plan wizards</field>
        <field name="model">payment.plan.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="number_of_installments"/>
                    <field name="chiller_charge_config" invisible="1"/>
                    <field name="is_chiller_charges" invisible="chiller_charge_config == False"/>
                    <field name="is_booking_adjusted"/>
                </group>
                <footer>
                    <button name="create_payment_plan" string="Create Payment Plan" type="object" class="btn-primary"/>
                    <button string="Cancel" type="object" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>