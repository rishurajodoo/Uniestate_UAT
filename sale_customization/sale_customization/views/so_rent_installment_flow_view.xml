                    <field name="is_utility_charge" column_invisible="parent.for_rent != True"/>
                    <field name="is_debit" column_invisible="parent.for_rent != True"/>
                </xpath>
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button name="create_deferred"
