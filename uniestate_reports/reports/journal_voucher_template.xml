<odoo>
    <template id="report_journal_voucher_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <p style="margin-top: -11px; text-align: left;">
                        <b><t t-esc="request.env.user.company_id.name"/><br/></b>
                        <b><t t-esc="request.env.user.company_id.street"/><br/></b>
                        <b><t t-esc="request.env.user.company_id.zip"/> <t t-esc="request.env.user.company_id.city"/><br/></b>
                    </p>
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="container">
                            <div class="col-8">
                                <t t-if="o.move_type == 'out_invoice' and o.so_ids and o.so_ids.for_rent">
                                    <h4>Rental Voucher</h4>
                                </t>
                                <t t-elif="o.move_type == 'out_invoice' and o.so_ids and o.so_ids.for_sale">
                                    <h4>Sales Voucher</h4>
                                </t>
                                <t t-elif="o.move_type == 'in_invoice'">
                                    <h4>Purchase Voucher</h4>
                                </t>
                                <t t-elif="o.move_type == 'entry' and o.journal_id.type=='general'">
                                    <h4>Journal Voucher</h4>
                                </t>
                                <t t-elif="o.move_type == 'entry' and o.journal_id.type=='bank'">
                                    <h4>Bank Voucher</h4>
                                </t>
                                <t t-elif="o.move_type == 'entry' and o.journal_id.type=='cash'">
                                    <h4>Cash Voucher</h4>
                                </t>
                            </div>

                            <div class="row">
                                <div class="col-8">
                                </div>
                                <div class="col-4">
                                    <p>Print Date : 
                                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>
                                        <!-- <span t-field="o.date" t-options='{"widget": "date","format": "dd-MM-yyyy"}'/> -->
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-8">
                                </div>
                                <div class="col-4">
                                    <p>Print Time :
                                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%H:%M:%S')"/>
                                        <!--                                    <span t-field="o.date" t-options='{"widget": "date","format": "dd-MM-yyyy"}'/>-->
                                    </p>
                                </div>
                            </div>



                            <div class="row zero_min_height">
                                <div class="col-12">
                                    <div style="border-bottom: 2px solid black;"/>
                                </div>
                            </div>

                            <div class="row" style="padding-top: 10px;">
                                <div class='col-1'>
                                    <span>Date</span>
                                </div>
                                <div class="col-2">
                                    <span t-esc="o.date.strftime('%d/%m/%Y')"/>
                                </div>
                                <div class="col-2">
                                    <span>Posted Date:</span>
                                </div>
                                <div class="col-2">
                                    <t t-if="o.invoice_date">
                                        <span t-esc="o.invoice_date.strftime('%d/%m/%Y')"/>
                                    </t>
                                </div>

                                <div class="col-2 text-right">
                                    <span>Sequence:</span>
                                </div>
                                <div class="col-3">
                                    <span t-esc="o.name"/>
                                </div>
                            </div>

                            <table class="table-bordered mb-5" width="100%">
                                <thead>
                                    <tr style="background-color: C2BBBA; height: 40px; padding: 5px;"
                                        class="text-center">
                                        <th>
                                            Account
                                        </th>
                                        <th>
                                            Account Name
                                        </th>
                                        <th>
                                            Analytical Account
                                        </th>
                                        <t t-if="o.journal_id.code == 'BILL'">
                                            <th>
                                                Partner
                                            </th>
                                        </t>
                                        <t t-if="o.journal_id.code == 'BILL'">
                                            <th>
                                                Taxes
                                            </th>
                                        </t>
                                        <th>
                                            Debit
                                        </th>
                                        <th>
                                            Credit
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.line_ids" t-as="move_line">
                                        <tr class="text-center">
                                            <td>
                                                <span t-field="move_line.account_id.code"/>
                                            </td>
                                            <td>
                                                <span t-field="move_line.account_id.name"/>
                                                <span t-field="move_line.name"/>
                                            </td>
                                            <td>
                                                <span t-foreach="move_line.analytic_distribution" t-as="distribution">
                                                <span t-out="move_line.env['account.analytic.account'].browse(int(distribution))[0].name">Analytic Account Name</span>
                                                </span>
                                            </td>
                                            <t t-if="o.journal_id.code == 'BILL'">
                                                <td>
                                                    <span t-field="o.partner_id.name"/>
                                                </td>
                                            </t>
                                            <t t-if="o.journal_id.code == 'BILL'">
                                                <td>
                                                    <span t-field="move_line.tax_ids"/>
                                                </td>
                                            </t>
                                            <td>
                                                <span t-field="move_line.debit"/>
                                            </td>
                                            <td>
                                                <span t-field="move_line.credit"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td colspan="3">
                                            <b>Amount In Words:</b>
                                            <span style="margin-left: 5px;"
                                                    t-esc="o.get_amount_in_words(sum(o.line_ids.mapped('debit')))"/>
                                        </td>
                                        <t t-if="o.journal_id.code == 'BILL'">
                                            <td></td>
                                        </t>
                                        <t t-if="o.journal_id.code == 'BILL'">
                                            <td></td>
                                        </t>
                                        <td class="text-center">
                                            <span t-esc="'{:,.2f}'.format(sum(o.line_ids.mapped('debit')))"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="'{:,.2f}'.format(sum(o.line_ids.mapped('credit')))"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="row">
                                <div class="col-3">
                                    <strong>
                                        <span t-esc="o.create_uid.name" class="text-center"/>
                                    </strong>
                                </div>
                                <div class="col-1">

                                </div>
                                <div class="col-3">

                                </div>
                                <div class="col-1">

                                </div>
                                <div class="col-3">

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-3">
                                    <div style="border-bottom: 2px solid black;"/>
                                </div>
                                <div class="col-1">

                                </div>
                                <div class="col-3">
                                    <div style="border-bottom: 2px solid black;"/>
                                </div>
                                <div class="col-1">
                                </div>
                                <div class="col-3">
                                    <div style="border-bottom: 2px solid black;"/>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-3 text-center">
                                    <span>Created By</span>
                                </div>
                                <div class="col-1">

                                </div>
                                <div class="col-3 text-center">
                                    <span>Verified By</span>
                                </div>
                                <div class="col-1">

                                </div>
                                <div class="col-3 text-center">
                                    <span>Approved By</span>
                                </div>

                            </div>

                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>