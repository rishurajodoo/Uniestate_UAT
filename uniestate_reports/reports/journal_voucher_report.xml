<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="custom_paperformat_journal_voucher" model="report.paperformat">
        <field name="name">Journal Voucher Paper Format</field>
        <field name="default" eval="False"/>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">20</field>   <!-- Top margin in mm -->
        <field name="margin_bottom">20</field> <!-- Bottom margin in mm -->
        <field name="margin_left">10</field>  <!-- Left margin in mm -->
        <field name="margin_right">10</field> <!-- Right margin in mm -->
        <field name="header_spacing">20</field> <!-- Space between header and content -->
        <field name="dpi">90</field> <!-- Dots per inch for printing -->
    </record>
    
    
    <record id="action_report_journal_voucher" model="ir.actions.report">
        <field name="name">Receipt / Payment Voucher</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">uniestate_reports.report_journal_voucher_template</field>
        <field name="report_file">uniestate_reports.report_journal_voucher_template</field>
        <field name="binding_model_id" ref="model_account_move"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Voucher - %s' % (object.name)</field>
        <field name="paperformat_id" ref="custom_paperformat_journal_voucher"/>
    </record>
</odoo>