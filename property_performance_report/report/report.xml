<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_property_performance" model="report.paperformat">
            <field name="name">Property Performance</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">25</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">20</field>
            <field name="disable_shrinking" eval="True"/>
            <field name="dpi">96</field>
        </record>

        <record id="property_performance_report_action" model="ir.actions.report">
            <field name="name">Leasing Performance Report</field>
            <field name="model">property.performance.report.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">property_performance_report.property_performance_template</field>
            <field name="report_file">property_performance_report.property_performance_template</field>
            <field name="paperformat_id" ref="paperformat_property_performance"/>
        </record>
    </data>
</odoo>
