<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_line_form_inherit_property" model="ir.ui.view">
        <field name="name">account.move.line.form.inherit.property</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_commission']" position="after">
                <group string="Property" name="property">
                    <field name="building"/>
                    <field name="floor"/>
                    <field name="unit" widget="many2many_tags"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_account_move_line_filter_property" model="ir.ui.view">
        <field name="name">account.move.line.filter.property</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="building"/>
                <field name="floor"/>
                <field name="unit" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//search/group" position="inside">
                <filter string="Unit" name="group_by_unit" domain="[]" context="{'group_by': 'unit'}"/>
                <filter string="floor" name="group_by_floor" domain="[]" context="{'group_by': 'floor'}"/>
                <filter string="building" name="group_by_building" domain="[]" context="{'group_by': 'building'}"/>
            </xpath>
        </field>
    </record>

</odoo>
