<odoo>

    <record id="view_deffered_revenue_credit_wizard_form" model="ir.ui.view">
        <field name="name">Deffered Revenue Credit Wizards</field>
        <field name="model">deffered.revenue.credit.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group col="4">
                        <field name="early_termination_period"/>
                        <field name="early_termination_penalty_amount"/>
                    </group>
                    <group col="4">
                        <field name="refundable_amount"/>
                        <field name="termination_date"/>
                    </group>
                </group>
                <footer>
                    <button name="close_and_create_credit" string="Credit Note Issue" type="object" class="btn-primary"/>
                    <button string="Cancel" type="object" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>